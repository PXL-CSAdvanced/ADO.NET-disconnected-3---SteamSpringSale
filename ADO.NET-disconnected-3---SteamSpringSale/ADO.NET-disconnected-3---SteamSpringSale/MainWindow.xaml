<Window x:Class="ADO.NET_disconnected_3___SteamSpringSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_disconnected_3___SteamSpringSale"
        mc:Ignorable="d"
       Title="Steam Game Viewer"
        Background="#171a21"
        Height="600" MinHeight="450" Width="1000" MinWidth="930" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        >
    <Window.Resources>
        <LinearGradientBrush
            x:Key="LibraryHeroOpacity"
            StartPoint="0,0"
            EndPoint="0,1">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
            <GradientStop Color="#77FFFFFF" Offset="0.8"/>
            <GradientStop Color="#00FFFFFF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush
            x:Key="BannerOpacity"
            StartPoint="0,0"
            EndPoint="1,0">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
            <GradientStop Color="#77FFFFFF" Offset="0.667"/>
            <GradientStop Color="#00FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#1b2838"
             Foreground="#c7d5e0" FontSize="14">
            <MenuItem Header="Popular Games"></MenuItem>
            <MenuItem Header="Profitable Games"></MenuItem>
            <MenuItem Header="All Genres"></MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MaxWidth="500"/>
                <ColumnDefinition Width="*" MinWidth="210" MaxWidth="300"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition MinHeight="150"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Border OpacityMask="{StaticResource BannerOpacity}" Grid.RowSpan="4" MaxWidth="500">
                <Image Name="library600x900Image" Source="/designPlaceHolders/library_600x900_2x.jpg"
                   Stretch="Uniform" VerticalAlignment="Bottom"></Image>
            </Border>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Name="logoImage" Source="/designPlaceHolders/logo.png"></Image>
                <TextBlock Name="gameNameTextBlock" Grid.Row="1" Foreground="#66c0f4" FontSize="20" FontWeight="Bold" FontFamily="Arial" Margin="10" TextWrapping="Wrap">Portal 2</TextBlock>
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <TextBlock Foreground="#66c0f4" FontSize="20" FontWeight="Bold" FontFamily="Arial" Margin="0 10">👍</TextBlock>
                    <TextBlock Name="positiveReviewTextBlock" Foreground="#66c0f4" FontSize="20" FontWeight="Bold" FontFamily="Arial" Margin="10" TextWrapping="Wrap">9001</TextBlock>
                    <TextBlock Foreground="#c33c3c" FontSize="20" FontWeight="Bold" FontFamily="Arial" Margin="0 10">👎</TextBlock>
                    <TextBlock Name="negativeReviewTextBlock" Foreground="#c33c3c" FontSize="20" FontWeight="Bold" FontFamily="Arial" Margin="10" TextWrapping="Wrap">0</TextBlock>
                </StackPanel>
            </Grid>

            <GroupBox Header="Genres" Grid.Column="1" Grid.Row="2" Margin="10" Foreground="#c7d5e0">
                <ListBox 
                Name="GenresListBox"   
                Background="#1b2838"
                Foreground="#c7d5e0"
                BorderBrush="#2a475e"
                BorderThickness="1"
                Padding="5" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="#c7d5e0"/>
                            <Setter Property="Background" Value="#1b2838"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem>Puzzle</ListBoxItem>
                    <ListBoxItem>Action</ListBoxItem>
                </ListBox>
            </GroupBox>


            <GroupBox Header="Categories" Grid.Column="1" Grid.Row="3" Margin="10" Foreground="#c7d5e0">
                <ListBox
                Name="CategoriesListBox"
                Background="#1b2838"
                Foreground="#c7d5e0"
                BorderBrush="#2a475e"
                BorderThickness="1"
                Padding="5" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="#c7d5e0"/>
                            <Setter Property="Background" Value="#1b2838"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem>Single-player</ListBoxItem>
                    <ListBoxItem>Family Sharing</ListBoxItem>
                </ListBox>
            </GroupBox>

            <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Name="SearchTextBox" FontFamily="Arial" Background="#2a475e" FontSize="14" Margin="5" Foreground="#c7d5e0"></TextBox>
                <Button Name="SearchButton" Click="SearchButton_Click" Grid.Column="1" FontFamily="Arial" FontSize="14" Margin="5" Background="#acd550">Search</Button>
                <ComboBox Name="GenreComboBox" Grid.Column="2" Margin="5">
                    <ComboBoxItem>-- None --</ComboBoxItem>
                    <ComboBoxItem>Action</ComboBoxItem>
                </ComboBox>
                <ComboBox Name="CategoryComboBox" Grid.Column="3" Margin="5">
                    <ComboBoxItem>-- None --</ComboBoxItem>
                    <ComboBoxItem>Single player</ComboBoxItem>
                </ComboBox>
                <DataGrid
                Name="SteamGamesDataGrid"
                SelectionChanged="SteamGamesDataGrid_SelectionChanged"
                Grid.Row="1" Grid.ColumnSpan="4"
                Background="#1b2838"
                Foreground="#c7d5e0"
                GridLinesVisibility="None"
                RowBackground="#1b2838"
                AlternatingRowBackground="#171a21"
                BorderBrush="#2a475e"
                BorderThickness="1"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                CanUserAddRows="False"
                CanUserDeleteRows="False">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2a475e"/>
                            <Setter Property="Foreground" Value="#c7d5e0"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="BorderBrush" Value="#171a21"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="#c7d5e0"/>
                            <Setter Property="Background" Value="#1b2838"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="BorderBrush" Value="#171a21"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2a475e"/>
                                    <Setter Property="Foreground" Value="#66c0f4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>


            </Grid>

            <Border OpacityMask="{StaticResource LibraryHeroOpacity}" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Right">
                <Image Name="libraryHeroImage" Source="/designPlaceHolders/library_hero.jpg"
           Stretch="Uniform" VerticalAlignment="Bottom"></Image>
            </Border>

            <Image Source="/designPlaceHolders/steamTitle.png" MaxWidth="300" MaxHeight="50" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>



            <Border BorderBrush="Black" BorderThickness="1" Background="Black" MouseLeftButtonUp="Video_Click"
                    Grid.Row="0" Grid.Column="1">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                </Border.RenderTransform>

                <MediaElement x:Name="videoPlayer"
                  Source="https://video.cloudflare.steamstatic.com/store_trailers/5787/movie480.mp4"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Stop"
                  Stretch="Uniform"/>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="2.5" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="2.5" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>


        </Grid>
    </DockPanel>

</Window>